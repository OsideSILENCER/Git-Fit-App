<form action="/workout">
<div>
  <label></label>
    <select name="weekday"class="container left browser-default col s4">
      <option value="" disabled selected>Choose your option</option>
      <option value="1">Monday</option>
      <option value="2">Tuesday</option>
      <option value="3">Wednesday</option>
      <option value="3">Thursday</option>
      <option value="3">Friday</option>
      <option value="3">Saturday</option>
      <option value="3">Sunday</option>
    </select>
    <select name="workoutId" class="container left browser-default col s4">
      <option value="" disabled selected>Choose your option</option>
      {{#each workouts as |w|}}
        <option value="{{w.id}}">{{w.name}}</option>
      {{/each}}
     </select>
</div>
  <button class='btn waves-effect waves-light hoverable amber black-text' type='submit'>Submit</button>
</form>